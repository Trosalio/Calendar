<GridPane minHeight="400.0" minWidth="1050.0" xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="601.0" minWidth="500.0" prefWidth="500.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="689.0" minWidth="454.0" prefWidth="550.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <BorderPane>
        <center>
            <TableView fx:id="eventTable" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="nameColumn" editable="false" prefWidth="100.0" text="Event Name"/>
                    <TableColumn fx:id="priorityColumn" editable="false" maxWidth="3000.0" prefWidth="10.0"
                                 text="Priority"/>
                    <TableColumn fx:id="dateColumn" editable="false" prefWidth="100.0" text="Start Date"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </center>
        <bottom>
            <Button fx:id="deleteBtn" disable="true" mnemonicParsing="false" onAction="#onDelete" prefWidth="500.0"
                    text="Delete"/>
        </bottom>
    </BorderPane>
    <BorderPane GridPane.columnIndex="1">
        <center>
            <GridPane BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="145.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="316.0" minWidth="10.0" prefWidth="237.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                    <RowConstraints vgrow="SOMETIMES"/>
                </rowConstraints>
                <TextArea fx:id="eventDescTxtA" editable="false" prefHeight="200.0" prefWidth="200.0"
                          GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </TextArea>
                <Label alignment="CENTER" text="Event Description:" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Event Date:" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Event Name: ">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Event Priority:" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="eventPriorityLbl" text="&lt;Priority&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="eventNameLbl" text="&lt;Name&gt;" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="eventDateLbl" text="&lt;Date&gt;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Recursion:" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Label fx:id="recurrenceLbl" text="&lt;IsRecurred, [&lt;Recurrences&gt;]&gt;" GridPane.columnIndex="1"
                       GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
            </GridPane>
        </center>
        <top>
            <VBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                <Label text="Event Info">
                    <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                    <effect>
                        <Blend/>
                    </effect>
                </Label>
            </VBox>
        </top>
    </BorderPane>
</GridPane>
