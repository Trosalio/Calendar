<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="250.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CalendarEventController">
    <center>
        <AnchorPane prefHeight="350.0" prefWidth="250.0" BorderPane.alignment="CENTER">
            <DatePicker fx:id="datePicker" editable="false" layoutX="10.0" layoutY="85.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" />
            <TextArea fx:id="eventDescTxtA" layoutX="10.0" layoutY="160.0" prefHeight="120.0" prefWidth="210.0" promptText="Add description..." AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <font>
               <Font name="Verdana" size="13.0" />
            </font></TextArea>
            <TextField fx:id="eventNameTxtF" layoutX="10.0" layoutY="30.0" promptText="Add name event.." AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <font>
               <Font name="Verdana" size="13.0" />
            </font></TextField>
            <Label layoutX="10.0" layoutY="10.0" text="Event Name" AnchorPane.leftAnchor="10.0">
            <font>
               <Font name="Verdana" size="13.0" />
            </font></Label>
            <Label layoutX="10.0" layoutY="65.0" text="Date" AnchorPane.leftAnchor="10.0">
            <font>
               <Font size="13.0" />
            </font></Label>
            <Label layoutX="10.0" layoutY="140.0" text="Description" AnchorPane.leftAnchor="10.0">
            <font>
               <Font name="Verdana" size="13.0" />
            </font></Label>
            <Label layoutX="90.0" layoutY="140.0" text="- Optional" textFill="#6b6b6b">
            <font>
               <Font name="Verdana" size="13.0" />
            </font></Label>
        </AnchorPane>
    </center>
    <top>
        <AnchorPane style="-fx-background-color: #ccccff;" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" graphicTextGap="5.0" layoutY="8.0" text=" Event" textFill="WHITE" AnchorPane.leftAnchor="5.0">
                <font>
                    <Font name="Salsa-Regular" size="36.0" />
                </font>
            </Label>
         <effect>
            <DropShadow color="#24229a" />
         </effect>
        </AnchorPane>
    </top>
   <bottom>
      <BorderPane prefHeight="28.0" prefWidth="251.0" style="-fx-background-color: #ccccff;" BorderPane.alignment="CENTER">
         <right>
               <Button fx:id="saveBtn" onAction="#onSave" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: #ccccff;" text="Save" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="5.0" right="5.0" />
               </BorderPane.margin>
               <font>
                  <Font name="Verdana" size="13.0" />
               </font>
            </Button>
         </right>
         <left>
               <Button fx:id="cancelBtn" onAction="#onCancel" prefHeight="40.0" prefWidth="110.0" style="-fx-background-color: #ccccff;" text="Cancel" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="5.0" right="5.0" />
               </BorderPane.margin>
               <font>
                  <Font name="Verdana" size="13.0" />
               </font>
            </Button>
         </left>
         <center>
            <Line endY="39.0" stroke="WHITE" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </BorderPane.margin>
               <effect>
                  <DropShadow color="#b561fa" />
               </effect>
            </Line>
         </center>
         <effect>
            <DropShadow color="#38328f" />
         </effect>
      </BorderPane>
   </bottom>
</BorderPane>
